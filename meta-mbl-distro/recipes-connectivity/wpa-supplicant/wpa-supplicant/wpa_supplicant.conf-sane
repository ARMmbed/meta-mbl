ctrl_interface=/var/run/wpa_supplicant
ctrl_interface_group=0

# do not  allow wpa_supplicant to overwrite configuration file whenever configuration is changed
update_config=0

# do not perform AP scanning and then uses the scan results to select a suitable AP
# driver takes care of scanning, AP selection, and IEEE 802.11 association parameters
ap_scan=0

network={
        key_mgmt=NONE
}
